
<%- if notice %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end -%>

<h2>User details</h2>
<br/>

<p>
  <%= image_tag @admin_user.photo.url :thumb unless @admin_user.photo.nil? %>
</p>

<p>
  <b>Full name:</b>
  <%= @admin_user.full_name %>
</p>
<p>
  <b>Birthday:</b>
  <%= @admin_user.birthday %>
</p>
<p>
  <b>Country:</b>
  <%= @admin_user.country %>
</p>
<p>
  <b>Member since:</b>
  <%= @admin_user.created_at %>
</p>

<%= link_to 'Edit', edit_admin_user_path(@admin_user) %> |
<%= link_to 'Back', admin_users_path %>
