<%= form_for [:admin, @admin_user], html: { multipart: true } do |f| %>  

  <% if @admin_user.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <h2><%= pluralize(@admin_user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @admin_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br/>
  <%= image_tag @admin_user.photo.url(:thumb) if @admin_user.id.present? %><br/><br/>
  
  <%= f.label "Profile picture" %>
  <%= f.file_field :photo %>

  <%= f.label :email %><%= f.email_field :email %>

  <%= f.label :first_name %><%= f.text_field :first_name %>
  
  <%= f.label :last_name %><%= f.text_field :last_name %>
  
  <%= f.label :country %><%= f.text_field :country %>
  
  <%= f.label :birthday %><%= date_select :user, :birthday %>

  <%= f.label :password %>
  <%= f.password_field :password, :autocomplete => "off" %>
  <em>(leave blank if you don't want to change it)</em>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>

<% end %>