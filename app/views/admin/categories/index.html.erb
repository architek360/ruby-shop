<h3>Listing Categories</h3>

<%= paginate @admin_categories %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @admin_categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.color %></td>
        <td>
          <%= link_to 'Show', admin_category_path(category), class: "btn-small btn-info" %>
          <%= link_to 'Edit', edit_admin_category_path(category), class: "btn-small btn-primary" %>
          <%= link_to 'Destroy', admin_category_path(category), class: "btn-small btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Category', new_admin_category_path, class: "btn" %>
