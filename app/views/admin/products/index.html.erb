<h3>Listing Products</h3>

<br/>

<table class="table table-striped">
 <thead>
   <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Qty</th>
      <th>Price</th>
      <th>On sale</th>
      <th>Sale price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @admin_products.each do |admin_product| %>
      <tr>
        <td><%= admin_product.name %></td>
        <td><%= truncate(admin_product.description, length: 40, omission: "...") %></td>
        <td><%= admin_product.qty %></td>
        <td><%= admin_product.price %></td>
        <td><%= admin_product.on_sale %></td>
        <td><%= admin_product.sale_price %></td>
        <td>
          <%= link_to 'Show', admin_product_path(admin_product), class: "btn btn-info" %>
          <%= link_to 'Edit', edit_admin_product_path(admin_product), class: "btn btn-primary" %>
          <%= link_to 'Destroy', admin_product_path(admin_product), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Product', new_admin_product_path, class: "btn" %>
